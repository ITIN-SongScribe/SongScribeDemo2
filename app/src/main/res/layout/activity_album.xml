<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.songscribe.songscribe.Album"
    android:background="#5000b5ff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artist"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/imageButton"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/logout"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:background="#5371d0f7"
        android:textSize="15dp"
        android:textColor="#FF004b6c" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/horizontal_logo"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@+id/txtAlbumArtist"
            android:id="@+id/artistname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#ff272f4e"
            android:singleLine="false"
            android:textIsSelectable="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button3"
            android:layout_below="@id/artistname"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button4"
            android:layout_below="@id/button3"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button5"
            android:layout_below="@id/button4"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button6"
            android:layout_below="@id/button5"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button7"
            android:layout_below="@id/button6"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/button8"
            android:layout_below="@id/button7"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="New Song"
            android:id="@+id/SAVE"
            android:layout_below="@id/button8"
            android:layout_centerHorizontal="true"
            android:background="#7d064cff"
            android:textSize="20dp" />

    </RelativeLayout>
