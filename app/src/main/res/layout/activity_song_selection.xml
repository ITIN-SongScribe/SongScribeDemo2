<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.songscribe.songscribe.SongSelection"
    android:background="#5000b5ff">



    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:id="@+id/imageView2"
        android:src="@drawable/horizontal_logo"
        android:layout_alignTop="@+id/Logout"
        android:layout_alignBottom="@+id/Logout" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/Logout"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:background="#5371d0f7"
        android:textSize="15dp"
        android:textColor="#FF004b6c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Song Selection"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:layout_below="@+id/Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist"
        android:textSize="20sp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="New Song"
        android:id="@+id/nsong"
        android:layout_below="@id/artist"
        android:background="#7d064cff"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
         />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Resume Song"
        android:id="@+id/Resume"
        android:layout_below="@+id/nsong"
        android:layout_marginTop="10dp"
        android:background="#7d064cff"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Your Album"
        android:id="@+id/LOAD"
        android:layout_below="@+id/Resume"
        android:layout_marginTop="10dp"
        android:background="#7d064cff"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Browse Artists"
        android:id="@+id/Browse"
        android:layout_below="@+id/LOAD"
        android:layout_marginTop="10dp"
        android:background="#7d064cff"
        android:textSize="20dp" />



</RelativeLayout>
