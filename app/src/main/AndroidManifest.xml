<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.songscribe.songscribe" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/sslogoi"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SongSelection"
            android:label="SongScribe" >
        </activity>
        <activity
            android:name=".NewSongScreen"
            android:label="SongScribe" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LoginScreen"
            android:label="@string/title_activity_login_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Album"
            android:label="SongScribe" >
        </activity>
        <activity
            android:name=".VoiceRecord"
            android:label="@string/title_activity_voice_record" >
        </activity>
    </application>

</manifest>
